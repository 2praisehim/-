// 문자열 다루기 기본
// 문자열 s의 길이가 4 혹은 6이고, 숫자로만 구성돼있는지 확인해주는 함수, solution을 완성하세요. 예를 들어 s가 a234이면 False를 리턴하고 1234라면 True를 리턴하면 됩니다.
// 2021-02-17

#include <string>
#include <vector>

using namespace std;

bool solution(string s) {
    bool answer = true;
    
    if(s.size() == 4 || s.size() == 6){ // 4 혹은 6
        for(int i = 0; i < s.size(); i++){
            if(answer == false) break; // 숫자 x
            if(s[i] >= '0' && s[i] <= '9') answer = true; // 숫자 계산
            else answer = false;
        }
    }
    else answer = false;
    
    return answer;
}
